---
import type { SocialNetwork } from "../../model/SocialNetwok";
import AboutOwner from "./AboutOwner.astro";
import SocialNetworks from "./SocialNetworks.astro";

interface Props {
    name: string
    aboutOwnerDescription: string
    socialNetworks: SocialNetwork[]
}

const { name, aboutOwnerDescription, socialNetworks } = Astro.props;
---

<header class="container">
    <AboutOwner
        name={ name }
        about={ aboutOwnerDescription }
    />
    <SocialNetworks socialNetworks={ socialNetworks } />
</header>

<style>
    header {
        display: flex !important;
        gap: 2rem;
        justify-content: space-between;
    }

    @media (max-width: 800px) {
        header {
            flex-wrap: nowrap;
            flex-direction: column;
        }
    }
</style>