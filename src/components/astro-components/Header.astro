---
import AboutOwner from "./AboutOwner.astro";
import SocialNetworks from "./SocialNetworks.astro";

interface Props {
    name: string
}

const { name } = Astro.props;
---

<header class="container">
    <AboutOwner
        name={ name }
        about={ 'Lorem ipsum dolor sit amet consectetur, adipisicing elit. Est, unde modi. Earum facilis, molestiae sed, laboriosam dolorem libero alias suscipit, eveniet in iusto quibusdam qui. Labore veniam aut illo corporis.' }
    />
    <SocialNetworks />
</header>

<style>
    header {
        display: flex !important;
        gap: 2rem;
    }

    @media (max-width: 800px) {
        header {
            flex-wrap: nowrap;
            flex-direction: column;
        }
    }
</style>