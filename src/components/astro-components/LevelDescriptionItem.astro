---
interface Props {
    level: number
    levelDescription: string
}

const { level, levelDescription } = Astro.props
---

<div class="level-item">
    <img
		class="icon"
		src={ `/image/level_${ level }.svg` }
		alt={`level_${ level }`}
	/>
	<p>{ levelDescription }</p>
</div>


<style>
	.icon {
		width: 10rem;
	}

	.level-item {
		min-height: 120px;
	}
</style>